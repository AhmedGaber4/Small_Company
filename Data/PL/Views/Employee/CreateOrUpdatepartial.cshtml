@model EmployeeViewModel
@{
   
    var dep = new SelectList(ViewBag.departments, "Id", "Name");
}

<div class="form-group">
    <label asp-for="@Model.Name" class="col-form-label"></label>
    <input asp-for="@Model.Name" class="form-control" />
    <span asp-validation-for="@Model.Name" class="text-danger"></span>
</div>

<div class=" form-group">
    <label asp-for="@Model.Adreses" class="col-form-label"></label>
    <input asp-for="@Model.Adreses" class="form-control" />
    <span asp-validation-for="@Model.Adreses" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="@Model.Email" class="col-form-label"></label>
    <input asp-for="@Model.Email" class="form-control" />
    <span asp-validation-for="@Model.Email" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="@Model.Salary" class="col-form-label"></label>
    <input asp-for="@Model.Salary" class="form-control" />
    <span asp-validation-for="@Model.Salary" class="text-danger"></span>
</div>




<div class="form-group">
    <label asp-for="@Model.HiringDate" class="col-form-label"></label>
    <input asp-for="@Model.HiringDate" class="form-control" />
    <span asp-validation-for="@Model.HiringDate" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="@Model.DepartmentId" class="col-form-label"></label>
    <select asp-for="@Model.DepartmentId" asp-items="dep" class="form-control">
        <option>   —— Select Department —-   </option>
    </select>
    <span asp-validation-for="@Model.DepartmentId" class="text-danger"></span>
</div>

<div class="form-group from-check">
    <input class="form-check-input" type="checkbox" asp-for="@Model.Isactive">
    <label class="form-check-label" asp-for="@Model.Isactive">
    </label>
</div>

<div class="form-group">

    <label asp-for="@Model.Image" class="form-group"></label>
    <input type="file" asp-for="@Model.Image" class="form-control" />
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}