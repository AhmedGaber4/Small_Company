@model EmployeeViewModel
@{
    ViewData["Title"]
        = "Details";
}

<h1> Employee Details </h1>
<br />
<br />

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        <h3>@TempData["Message "]</h3>

    </div>
}

<div class="row">
    <div class="col-12">
        <div class="from-group">
            
            <label asp-for="@Model.Name" class="col-form-label"></label>
            <input asp-for="@Model.Name" class="form-control" readonly />
        </div>

        <div class="from-group">
            <label asp-for="@Model.Adreses" class="col-form-label"></label>
            <input asp-for="@Model.Adreses" class="form-control" readonly />
        </div>

        <div class="from-group">
            <label asp-for="@Model.Email" class="col-form-label"></label>
            <input asp-for="@Model.Email" class="form-control" readonly />
        </div>
        <div class="from-group">
            <label asp-for="@Model.Salary" class="col-form-label"></label>
            <input asp-for="@Model.Salary" class="form-control" readonly />
        </div>
        <div class="from-group">
            <label asp-for="@Model.HiringDate" class="col-form-label"></label>
            <input asp-for="@Model.HiringDate" class="form-control" readonly />
        </div>

        <div class="from-group">
            <label asp-for="@Model.DepartmentId" class="col-form-label"></label>
            <input asp-for="@Model.DepartmentId" class="form-control" readonly />
        </div>
        <div class="from-group">
            <input class="form-check-input" type="checkbox" asp-for="@Model.Isactive" disabled>
            <label class="form-check-label" asp-for="@Model.Isactive" >
            </label>
        </div>



        <div class="form-group">

            <label asp-for="@Model.Image" class="form-group"></label>
            <input type="file" asp-for="@Model.Image" class="form-control" disabled />
        </div>

        <br />
        <a class="btn btn-success" asp-action="Update" asp-route-id="@Model.Id">Update</a>
        <a class="btn btn-light" asp-action="Goo">Back To List</a>
    </div>

</div>  