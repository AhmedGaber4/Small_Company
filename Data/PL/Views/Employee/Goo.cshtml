@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "Goo";
}
<h1>Every Employee</h1>
<br />

<a asp-action="Create" class="btn btn-primary"> Create New Employee</a>
<br />
<br />

<form class="my-3" asp-action="Goo" asp-controller="Employee">
    <div class="row">
        <div class="col-sm-8">
            <input placeholder="Search ^^^" name="SearchValue" class="form-control" />
        </div>
        <div class="col-sm-4">
            <input type="submit" value="Search" class="btn btn-success btn-block" />
        </div>
    </div>
</form>



@if (Model?.Count() > 0)
{

    <table class="table table—striped table—hover">
        <thead>
            <tr>

             
                <th>@Html.DisplayNameFor(x => x.Name)</th>
                <th>@Html.DisplayNameFor(x => x.Image)</th>
                <th>@Html.DisplayNameFor(x => x.Adreses)</th>
                <th>@Html.DisplayNameFor(x => x.Email)</th>
                <th>@Html.DisplayNameFor(x => x.Salary)</th>
                <th>@Html.DisplayNameFor(x => x.HiringDate)</th>
                <th>@Html.DisplayNameFor(x => x.Isactive)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <img src="~/Files/Image/@item.ImageUrl" class="img-circle" height="40" width="40" alt="Empolyee image" />
                    </td>
                    <td>@item.Adreses</td>
                    <td>@item.Email</td>
                    <td>@item.Salary</td>
                    <td>@item.HiringDate.Day-@item.HiringDate.Month-@item.HiringDate.Year</td>
                    <td>@item.Isactive</td>
                    <td>
    
                        <a class="btn btn-success" asp-controller="Employee" asp-action="Details" asp-route-id="@item.Id">
                            <i class="fas fa—eye"></i>Details
                        </a>

                    </td>
                    <td>

                        <a class="btn btn-warning" asp-controller="Employee" asp-action="Update" asp-route-id="@item.Id">
                            <i class="fas fa—edit"></i>Update
                        </a>
                    </td>

                    <td>

                        <a class=" btn btn-danger" asp-controller="Employee" asp-action="Delete" asp-route-id="@item.Id">

                            <i class=" fas fa—trash"></i>Delete
                        </a>
                    </td>
                </tr>

            }

        </tbody>
    </table>




}

else
{

    <div class="alert alert—warning">
        <h3>No Employees Found !! </h3>
    </div>
}

