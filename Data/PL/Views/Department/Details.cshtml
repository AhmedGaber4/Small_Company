@model Department
@{
    ViewData["Title"]
        = "Details";
}
 
<h1> Department Details </h1>
    <br />
    <br />

@if (TempData[ "Message"] !=null)
{
  <div class="alert alert-success" >
    <h3>@TempData[ "Message " ]</h3>

  </div>
}

<div class="row">
    <div class="col-12">
       <div class="from-group">
           <label asp-for="@Model.Code" class="col-from-label"></label>
            <input asp-for="@Model.Code" class="form-control" readonly />
       </div>

        <div class="from-group">
            <label asp-for="@Model.Name" class="col-from-label"></label>
            <input asp-for="@Model.Name" class="form-control" readonly />
        </div>

        <div class="from-group">
            <label asp-for="@Model.CreateAt" class="col-from-label"></label>
            <input asp-for="@Model.CreateAt" class="form-control" readonly />
        </div>

        <br />
        <a class="btn btn-success" asp-action="Update" asp-route-id="@Model.Id">Update</a> 
        <a class="btn btn-light" asp-action="Go">Back To List</a>
   </div>

</div>  